<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Latest Contests</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Correct FontAwesome CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: auto;
      padding: 20px;
    }

    h2, h3 {
      color: #333;
      font-weight: bold;
    }

    .intro-section img {
      max-width: 100%;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .nav-tabs {
      border-bottom: 2px solid #dee2e6;
    }

    .nav-tabs .nav-link {
      color: #333 !important;
      font-weight: 500;
      transition: all 0.3s ease-in-out;
    }

    .nav-tabs .nav-link.active {
      color: #fff !important;
      background-color: #007bff !important;
      border-radius: 5px;
    }

    .contest-card {
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .contest-card:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card {
      border: none;
      border-radius: 10px;
      overflow: hidden;
    }

    .card img {
      height: 200px;
      object-fit: cover;
    }

    .card-title {
      font-size: 1.25rem;
      font-weight: bold;
      color: #333;
    }

    .btn-primary {
      background-color: #007bff;
      border: none;
      font-weight: 500;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <!-- Introduction Section -->
    <section class="mb-5 text-center">
      <h2 class="mb-4">Welcome to Our Exciting Contests!</h2>
      <div class="row align-items-center">
        <div class="col-md-6">
          <h3 class="mb-3">Discover Contests on <span style="color: #007bff;">TejasAI</span></h3>
          <p class="lead text-muted">
            Dive into the world of <strong>TejasAI</strong> and explore thrilling contests for every passionâ€”<em>photography</em>, <em>coding challenges</em>, or <em>creative arts</em>. Join us to unlock your potential and win exciting rewards!
          </p>
        </div>
        <div class="col-md-6">
          <img src="/public/Man.png" alt="Contests" class="img-fluid rounded">
        </div>
      </div>
    </section>

    <!-- Contest Section -->
    <section>
      <h3 class="text-center mb-4">Explore Contests</h3>
      
      <!-- Category Tabs -->
      <ul class="nav nav-tabs justify-content-center mb-4" id="contestTabs">
        <li class="nav-item">
          <a class="nav-link active" href="#" data-category="all"><i class="fas fa-globe"></i> All</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-category="live"><i class="fas fa-bolt"></i> Live</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-category="registered"><i class="fas fa-user-check"></i> Registered</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-category="upcoming"><i class="fas fa-calendar-alt"></i> Upcoming</a>
        </li>
      </ul>

      <!-- Contest Cards -->
      <div class="row" id="contestCards">
        <% contests.forEach(contest => { %>
          <div class="col-md-4 mb-4 contest-card" data-category="<%= contest.category %>">
            <div class="card shadow">
              <img src="<%= contest.img %>" class="card-img-top" alt="<%= contest.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= contest.title %></h5>
                <p class="card-text text-muted"><%= contest.what_to_do %></p>
                <a href="/contest/<%= contest.id %>" class="btn btn-primary w-100">View Details</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Category Filtering Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const tabs = document.querySelectorAll("#contestTabs .nav-link");
      const cards = document.querySelectorAll(".contest-card");

      tabs.forEach(tab => {
        tab.addEventListener("click", (e) => {
          e.preventDefault();

          // Activate the clicked tab
          tabs.forEach(t => t.classList.remove("active"));
          tab.classList.add("active");

          // Get the selected category
          const category = tab.getAttribute("data-category");

          // Show/Hide cards based on category
          cards.forEach(card => {
            if (category === "all" || card.getAttribute("data-category") === category) {
              card.style.display = "block";
            } else {
              card.style.display = "none";
            }
          });
        });
      });
    });
  </script>
</body>
</html>
